# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Account routes
POST    /accounts/login             controllers.AccountController.login
POST    /accounts/logout            controllers.AccountController.logout

# Post routes
POST    /posts                      controllers.PostController.createPost
GET     /posts/:id                  controllers.PostController.getPost(id)
PUT     /posts/:id                  controllers.PostController.updatePost(id)
DELETE  /posts/:id                  controllers.PostController.deletePost(id)

# Search routes
GET     /search/:category           controllers.SearchController.search(category)
GET     /search/:category/:userId   controllers.SearchController.searchWithUser(category, userId)
